{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug Rust Project",
            "cargo": {
                "args": ["build", "--bin", "tgp_rust"],  // Ensure the binary is explicitly specified
                "filter": {
                    "name": "tgp_rust",
                    "kind": "bin"
                }
            },
            "args": ["-runCtx:{\"a\": 5}"],  // Ensure this matches exactly how it works in CLI
            "cwd": "${workspaceFolder}"
        }
    ]
}
